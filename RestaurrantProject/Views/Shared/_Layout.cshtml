<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RestaurrantProject</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RestaurrantProject.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* === Navbar Style === */
        nav.navbar {
            background: rgba(255, 255, 255, 0.7);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.3);
            box-shadow: 0 3px 8px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

            nav.navbar:hover {
                background: rgba(255, 255, 255, 0.85);
            }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.4rem;
            color: #ff7e5f !important;
            transition: color 0.3s;
        }

            .navbar-brand:hover {
                color: #feb47b !important;
            }

        .nav-link {
            color: #333 !important;
            font-weight: 500;
            position: relative;
            transition: all 0.3s ease;
        }

            .nav-link::after {
                content: "";
                position: absolute;
                left: 0;
                bottom: 2px;
                width: 0;
                height: 2px;
                background: linear-gradient(90deg, #ff7e5f, #feb47b);
                transition: width 0.3s ease;
            }

            .nav-link:hover::after {
                width: 100%;
            }

        /* === Body & Container === */
        body {
            background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            flex: 1;
        }

        main {
            animation: fadeIn 0.6s ease;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* === Footer === */
        footer {
            background-color: rgba(0, 0, 0, 0.85);
            color: #f8f9fa;
            padding: 20px 0;
            text-align: center;
            font-size: 0.95rem;
        }

            footer a {
                color: #ff7e5f;
                text-decoration: none;
                transition: color 0.3s;
            }

                footer a:hover {
                    color: #feb47b;
                }

        .footer-icons i {
            font-size: 1.2rem;
            margin: 0 10px;
            transition: transform 0.3s, color 0.3s;
        }

            .footer-icons i:hover {
                transform: translateY(-3px);
                color: #feb47b;
            }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    🍽️ MyRestaurant
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="MyOrders">🛒 My Orders</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Order" asp-action="Cart">🛒 My Cart</a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">⚙️ Admin</a>
                            </li>
                        }

                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="SignOut">Sign Out</a>
                            </li>
                            <li class="nav-item">
                                <span class="nav-link text-dark fw-bold">👋 Welcome, @User.Identity.Name</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="footer-icons mb-2">
            <a href="#"><i class="bi bi-facebook"></i></a>
            <a href="#"><i class="bi bi-instagram"></i></a>
            <a href="#"><i class="bi bi-twitter"></i></a>
        </div>
        <div>
            &copy; 2025 - MyRestaurant | <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
