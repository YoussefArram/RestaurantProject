@model ErrorViewModel
@{
    ViewData["Title"] = "Oops! Something went wrong 😔";
}

<div class="container text-center mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-5 mx-auto" style="max-width: 600px;">
        <div class="mb-4">
            <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 4rem;"></i>
        </div>

        <h1 class="fw-bold text-danger mb-3">Oops! Something went wrong</h1>
        <p class="text-muted mb-4">
            We're sorry, but an unexpected error has occurred.<br />
            Please try again later or contact support if the problem persists.
        </p>

        <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4 py-2 rounded-pill shadow-sm">
            <i class="bi bi-house-door-fill"></i> Back to Home
        </a>

        @if (Model?.ShowRequestId == true)
        {
            <p class="mt-4 text-muted small">
                <strong>Error ID:</strong> <code>@Model.RequestId</code>
            </p>
        }
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        min-height: 100vh;
    }

    .card {
        animation: fadeInUp 0.7s ease;
    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(40px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }
</style>
