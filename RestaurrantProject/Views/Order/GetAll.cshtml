@model List<Order>

@{
    ViewData["Title"] = "All Orders";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">📦 All Orders</h2>
        <a asp-action="Create" class="btn btn-success">+ Create New Order</a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card shadow-sm border-0 rounded-4 h-100">
                    <div class="card-body">
                        <h5 class="card-title text-dark fw-bold">Order #@item.Id</h5>
                        <p class="card-text mb-1"><strong>Type:</strong> @item.OrderType</p>
                        <p class="card-text mb-1">
                            <strong>Status:</strong>
                            @if (item.OrderStatus.ToString() == "Completed")
                            {
                                <span class="badge bg-success">@item.OrderStatus</span>
                            }
                            else if (item.OrderStatus.ToString() == "Pending")
                            {
                                <span class="badge bg-warning text-dark">@item.OrderStatus</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.OrderStatus</span>
                            }
                        </p>
                        <p class="card-text mb-1"><strong>Customer:</strong> @item.CustomerName</p>
                        <p class="card-text mb-3"><strong>Total:</strong> @item.Total.ToString("C")</p>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                                Details
                            </a>
                            <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white">
                                Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                Delete
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .card:hover {
        transform: translateY(-5px);
        transition: 0.3s ease;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
    }
</style>
