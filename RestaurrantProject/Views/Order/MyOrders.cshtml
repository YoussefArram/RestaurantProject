@using RestaurrantProject.Enums
@model List<Order>

@{
    ViewData["Title"] = "My Orders";
}

<div class="container mt-5">

    <h2 class="text-center mb-4 text-primary">My Orders</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center p-4 rounded-3 shadow-sm">
            <h5>No orders yet.</h5>
            <p>You haven't placed any orders.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var order in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-lg border-0 rounded-4 h-100">
                        <div class="card-header bg-dark text-white rounded-top-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <span><b>Order #@order.Id</b></span>
                                <span class="badge bg-primary">@order.OrderType</span>
                            </div>
                        </div>

                        <div class="card-body">
                            <h6><b>Date:</b> @order.CreatedAt.ToString("dd MMM yyyy - hh:mm tt")</h6>
                            <h6>
                                <b>Status:</b>
                                @if (order.OrderStatus == OrderStatus.Completed)
                                {
                                    <span class="badge bg-success">@order.OrderStatus</span>
                                }
                                else if (order.OrderStatus == OrderStatus.Pending)
                                {
                                    <span class="badge bg-warning text-dark">@order.OrderStatus</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@order.OrderStatus</span>
                                }
                            </h6>

                            <hr />

                            <h6><b>Items:</b></h6>
                            <ul class="list-group list-group-flush small">
                                @foreach (var item in order.orderItems)
                                {
                                    <li class="list-group-item d-flex justify-content-between">
                                        <span>@item.item?.Name (x@item.Quanitity)</span>
                                        <span>@item.SubTotal.ToString("0.00") EGP</span>
                                    </li>
                                }
                            </ul>

                            <hr />
                            <div class="text-end">
                                <h5 class="text-dark">
                                    <b>Total:</b> @order.Total.ToString("0.00") EGP
                                </h5>
                            </div>
                        </div>

                        <div class="card-footer bg-light text-center">
                            <a asp-action="Invoice" asp-route-id="@order.Id" class="btn btn-outline-primary btn-sm">
                                View Invoice
                            </a>

                            @if (order.OrderStatus == OrderStatus.Pending)
                            {
                                <form asp-action="DeleteOrder" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@order.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm"
                                            onclick="return confirm('Cancel this order?');">
                                        Cancel
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
