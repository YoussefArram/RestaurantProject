@model RestaurrantProject.ViewModels.LoginUserVM

@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
        font-family: 'Poppins', sans-serif;
        min-height: 100vh;
    }

    .login-card {
        animation: popUp 0.6s ease;
        transition: all 0.3s ease;
    }

    .login-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
    }

    @@keyframes popUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .btn-primary {
        background: linear-gradient(90deg, #ff7e5f, #feb47b);
        border: none;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: scale(1.03);
        box-shadow: 0 4px 12px rgba(255, 126, 95, 0.5);
    }

    .form-control {
        border-radius: 12px;
        padding: 10px 14px;
        border: 1px solid #ddd;
        transition: all 0.3s;
    }

    .form-control:focus {
        border-color: #ff9966;
        box-shadow: 0 0 5px rgba(255, 153, 102, 0.4);
    }

    .text-primary {
        color: #ff7e5f !important;
    }
</style>

<div class="d-flex align-items-center justify-content-center vh-100">
    <div class="card login-card shadow-lg border-0 rounded-4" style="width: 400px;">
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-primary">Welcome Back 👋</h2>
                <p class="text-muted mb-0">Login to your account</p>
            </div>

            <form asp-action="Login">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter your username" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="RememberMe" />
                        <label class="form-check-label small text-muted">@Html.DisplayNameFor(model => model.RememberMe)</label>
                    </div>
                    <a href="#" class="small text-decoration-none text-primary">Forgot Password?</a>
                </div>

                <div class="d-grid mb-3">
                    <button type="submit" class="btn btn-primary btn-lg fw-semibold shadow-sm">
                        Login
                    </button>
                </div>

                <div class="text-center">
                    <span class="text-muted small">Don’t have an account?</span>
                    <a asp-action="Register" class="text-primary fw-semibold text-decoration-none">Register</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
