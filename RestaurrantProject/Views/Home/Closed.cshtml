@{
    Layout = null;
    ViewData["Title"] = "Site Closed";
}

<style>
    body {
        background: linear-gradient(135deg, #1e1e2f, #2a2a4a);
        color: #fff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
    }

    .closed-container {
        text-align: center;
        animation: fadeIn 1.5s ease-in-out;
    }

    .icon {
        font-size: 5rem;
        margin-bottom: 20px;
        animation: bounce 2s infinite;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 10px;
        letter-spacing: 1px;
        animation: slideDown 1s ease-in-out;
    }

    p {
        font-size: 1.2rem;
        opacity: 0.8;
        animation: fadeIn 2s ease-in;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    @@keyframes slideDown {
        from

    {
        transform: translateY(-30px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }

    }

    @@keyframes bounce {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-10px);
    }

    }

    .hours {
        margin-top: 20px;
        font-size: 1rem;
        color: #ddd;
        opacity: 0.9;
        animation: fadeIn 2.5s ease-in;
    }

    .glow {
        text-shadow: 0 0 10px #ffcc00, 0 0 20px #ffaa00;
    }
</style>

<div class="closed-container">
    <div class="icon">🚧</div>
    <h1 class="glow">We're Currently Closed</h1>
    <p>Our business hours are from <b>9:00 AM</b> to <b>11:00 PM</b>.</p>
    <div class="hours">Please check back during our operating hours. Thank you for your patience!</div>
</div>
