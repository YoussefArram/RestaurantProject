@using RestaurrantProject.ViewModels;
@model UpdateItemVM

@{
    ViewData["Title"] = "Update Item";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-5">
                    <h2 class="text-center text-primary fw-bold mb-4">
                        ✏️ Update Item
                    </h2>

                    <form asp-action="Update" asp-route-id="@Model.Id">
                        <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Name</label>
                            <input asp-for="Name" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter item name..." />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">Description</label>
                            <textarea asp-for="Description" class="form-control form-control-lg rounded-3 shadow-sm" rows="3" placeholder="Enter item description..."></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-semibold">Price</label>
                            <input asp-for="Price" type="number" step="0.01" class="form-control form-control-lg rounded-3 shadow-sm" placeholder="Enter price..." />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CategoryID" class="form-label fw-semibold">Category</label>
                            <select asp-for="CategoryID" asp-items="Model.categories" class="form-select form-select-lg rounded-3 shadow-sm">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryID" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="GetAll" class="btn btn-outline-secondary px-4 py-2 rounded-3">
                                ⬅ Back to List
                            </a>
                            <button type="submit" class="btn btn-success px-5 py-2 rounded-3 shadow-sm">
                                💾 Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #eef2f3);
    }

    .card {
        transition: 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0 12px 25px rgba(0, 0, 0, 0.1);
        }

    input:focus, textarea:focus, select:focus {
        border-color: #198754 !important;
        box-shadow: 0 0 5px rgba(25, 135, 84, 0.3);
    }

    .btn-success {
        background-color: #198754;
        border: none;
    }

        .btn-success:hover {
            background-color: #157347;
        }
</style>
